@model CustomerListViewModel


<div class="modal fade text-left" id="OrderModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel33" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <label class="modal-title text-text-bold-600" id="myModalLabel33">افزودن سفارشات</label>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="#">
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="@Model.Item"></label>
                        <select asp-items="@Model.Item" name="ItemId" class="form-control" id="ItemId"></select>
                        <span asp-validation-for="@Model.Item" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="@Model.Qty"></label>
                        <input asp-for="@Model.Qty" name="Qty" id="Qty" class="form-control" autocomplete="off">
                        <span asp-validation-for="@Model.Qty"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.Description"></label>
                        <input asp-for="@Model.Description" name="Description" id="Description" class="form-control" autocomplete="off">
                        <span asp-validation-for="@Model.Description"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="reset" class="btn btn-outline-secondary btn-lg" data-dismiss="modal" value="لغو">
                    <input type="submit" class="btn btn-outline-primary btn-lg" id="btnAddOrder" value="تایید">
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/app-assets/vendors/js/core/jquery-3.3.1.min.js"></script>
    <script src="~/app-assets/vendors/js/datatable/datatables.min.js"></script>
    <script src="~/app-assets/vendors/js/datatable/dataTables.buttons.min.js"></script>
    <script src="~/app-assets/js/data-tables/datatable-advanced.js"></script>
}