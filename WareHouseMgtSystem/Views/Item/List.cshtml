@model  ItemListViewModel


<div class="content-wrapper mb-5">
    <div class="container-fluid">
        <!-- DOM - jQuery events table -->
        <section id="dom">
            <div class="row">
                <div class="col-12">
                    <div class="card">

                        @if (TempData["Message"] != null)
                        {
                            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                <strong class="text-info">معلومات!</strong> @TempData["Message"]
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">×</span>
                                </button>
                            </div>
                        }

                        <div class="card-header">
                            <div class="card-title-wrap bar-success">
                                <h4 class="card-title">لیست اجناس</h4>
                            </div>
                        </div>
                        <div class="card-body collapse show">
                            <div class="card-block card-dashboard">
                                <table class="table table-striped table-bordered dom-jQuery-events">
                                    <thead>
                                        <tr>
                                            <th>شماره</th>
                                            <th>نام</th>
                                            <th>قیمت</th>
                                            <th>واحد</th>
                                            <th>توضیع کننده</th>
                                            <th>تعداد</th>
                                            <th align="center">عملیات</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{int counter = 1; }
                                        @foreach (var item in Model.ItemList)
                                        {
                                            <tr>

                                                <td>@counter</td>
                                                <td>@item.Name</td>
                                                <td>@item.Price</td>
                                                <td>@item.Measure</td>
                                                <td>@item.SupplierName</td>
                                                <td>@item.Qty</td>
                                                <td align="center">
                                                    <a asp-action="Edit" asp-controller="Item" asp-route-id="@item.ItemId"><i class="icon-pencil"></i></a>
                                                    <a asp-action="Delete" asp-controller="Item" asp-route-id="@item.ItemId" onclick="return confirm('Are you sure?')"><i class="icon-trash text-danger"></i></a>
                                                </td>

                                                @{counter++; }
                                            </tr>}
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>شماره</th>
                                            <th>نام</th>
                                            <th>قیمت</th>
                                            <th>واحد</th>
                                            <th>توضیع کننده</th>
                                            <th>تعداد</th>
                                            <th align="center">عملیات</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- DOM - jQuery events table -->
    </div>
</div>

<script src="~/app-assets/vendors/js/core/jquery-3.3.1.min.js"></script>
<script src="~/app-assets/vendors/js/datatable/datatables.min.js"></script>
<script src="~/app-assets/vendors/js/datatable/dataTables.buttons.min.js"></script>
<script src="~/app-assets/js/data-tables/datatable-advanced.js"></script>