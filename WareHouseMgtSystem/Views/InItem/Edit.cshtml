@model InItemModel



<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <div class="card-title-wrap bar-success">
                <h4 class="card-title mb-0">ویرایش جنس ورودی</h4>
            </div>
        </div>
        <div class="card-body">
            <div class="px-3">
                <form class="form" method="post" asp-action="Edit" asp-controller="InItem">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-xl-3 col-lg-6 col-md-12 mb-1">
                                <fieldset class="form-group">
                                    <label asp-for="@Model.ItemId"></label>
                                    <select asp-items="@Model.ItemList" name="ItemId" class="form-control">
                                        <option selected disabled>انتخاب کنبد</option>
                                    </select>
                                    <span asp-validation-for="@Model.ItemId" class="text-danger"></span>
                                </fieldset>
                            </div>
                            <div class="col-xl-3 col-lg-6 col-md-12 mb-1">
                                <fieldset class="form-group">
                                    <label asp-for="@Model.Qty"></label>
                                    <input asp-for="@Model.Qty" name="Qty" value="@Model.Qty" class="form-control" autocomplete="off" />
                                    <span asp-validation-for="@Model.Qty" class="text-danger"></span>
                                </fieldset>
                            </div>
                            <div class="col-xl-3 col-lg-6 col-md-12 mb-1">
                                <fieldset class="form-group">
                                    <label asp-for="@Model.TotalPrice"></label>
                                    <input asp-for="@Model.TotalPrice" name="TotalPrice" value="@Model.TotalPrice" class="form-control" autocomplete="off" />
                                    <span asp-validation-for="@Model.TotalPrice" class="text-danger"></span>
                                </fieldset>
                            </div>
                            <div class="col-xl-3 col-lg-6 col-md-12 mb-1">
                                <label asp-for="@Model.DateString"></label>
                                <input name="DateString" type="text" value="@Model.DateString" class="form-control shamsi-date-picker" autocomplete="off" />
                                <span asp-validation-for="@Model.DateString" class="text-danger"></span>
                            </div>
                            <input type="hidden" value="@Model.InItemId" name="OutItemId" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary fe fe-24 fe-save"> ثبت</button>
                    <a asp-action="List" asp-controller="InItem" class="btn btn-danger fe fe-16 fe-x-square"> لغو</a>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script>
        $(document).ready(function () {
            $("input.shamsi-date-picker").persianDatepicker({ showGregorianDate: !1 });
        });
    </script>
}